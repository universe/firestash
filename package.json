{
  "name": "firestash",
  "version": "1.3.0",
  "main": "dist/src/index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rm -rf dist && tsc --jsx preserve -p tsconfig.json",
    "pretest": "yarn run build",
    "test": "firebase emulators:exec --ui 'yarn mocha'",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "mocha": "0x ./node_modules/mocha/bin/mocha -r dotenv/config dist/test",
    "whee": "0x -o dist/src/test.js",
    "kay": "node dist/src/test.js",
    "deploy": "NODE_ENV=production firebase deploy",
    "emulate": "firebase emulators:start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "pre-push": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/src"
  ],
  "dependencies": {
    "deepmerge": "^4.2.2",
    "leveldown": "^6.0.1",
    "levelup": "^5.0.1",
    "memdown": "^6.0.0",
    "nanoid": "^3.1.30",
    "rocksdb": "^5.1.1"
  },
  "peerDependencies": {
    "firebase-admin": "^9.9.0"
  },
  "devDependencies": {
    "0x": "^5.1.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@firebase/rules-unit-testing": "^1.3.5",
    "@types/chai": "^4.2.15",
    "@types/dotenv": "^6.1.1",
    "@types/leveldown": "^4.0.3",
    "@types/levelup": "^4.3.3",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "12.7.5",
    "@types/rocksdb": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "chai": "^4.3.4",
    "dotenv": "^8.0.0",
    "eslint": "8.15.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-standard": "^4.0.1",
    "firebase-admin": "^9.11.1",
    "firebase-tools": "^9.17.0",
    "husky": "^3.0.9",
    "isomorphic-fetch": "^3.0.0",
    "mocha": "^8.3.2",
    "typescript": "4.5.2",
    "watch": "^1.0.2"
  }
}
