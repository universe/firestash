{
  "name": "firestash",
  "version": "5.0.0-beta.1",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc --jsx preserve -p tsconfig.json",
    "pretest": "yarn run build",
    "test": "firebase emulators:exec --ui 'yarn clean-mocha'",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "mocha": "0x -o ./node_modules/mocha/bin/mocha -r dotenv/config dist/test/sqlite.js",
    "clean-mocha": "mocha --exit -r dotenv/config dist/test/*.test.js",
    "deploy": "NODE_ENV=production firebase deploy",
    "emulate": "firebase emulators:start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "pre-push": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/src"
  ],
  "dependencies": {
    "deepmerge": "^4.3.1",
    "nanoid": "^5.0.5"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.4.3",
    "firebase": "~10.6.0",
    "levelup": "^5.1.1",
    "memdown": "^6.1.1"
  },
  "peerDependencies": {
    "better-sqlite3": "^9.4.3",
    "firebase": "~10.6.0",
    "leveldown": "^6.1.1",
    "levelup": "^5.1.1",
    "memdown": "^6.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@firebase/rules-unit-testing": "^2.0.7",
    "@types/better-sqlite3": "^7.6.8",
    "@types/chai": "^4.2.15",
    "@types/dotenv": "^6.1.1",
    "@types/levelup": "^5.1.1",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "17.0.42",
    "@types/rocksdb": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "0x": "^5.1.2",
    "better-sqlite3": "^9.4.3",
    "chai": "^4.3.4",
    "dotenv": "^16.4.4",
    "eslint": "8.35.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-standard": "^4.0.1",
    "firebase": "~10.6.0",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^12.3.1",
    "husky": "^8.0.3",
    "isomorphic-fetch": "^3.0.0",
    "levelup": "^5.1.1",
    "memdown": "^6.1.1",
    "mocha": "^8.3.2",
    "rocksdb": "^5.2.1",
    "typescript": "^4.9.0",
    "watch": "^1.0.2"
  }
}
